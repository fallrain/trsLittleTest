/**app.wxss**/
/*不要格式化，不认识rpx*/
page {
  -webkit-box-sizing: border-box;
  -moz-box-sizing: border-box;
  box-sizing: border-box;
  font-family: Microsoft YaHei, tahoma, arial;
}

view,input,button,ul,li,p{
  -webkit-box-sizing: border-box;
  -moz-box-sizing: border-box;
  box-sizing: border-box;
}

p,ul{
  display: block;
}

input{
  background: #fff;
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
}
